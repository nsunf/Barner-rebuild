  - 
    function getRandomNumArr(cnt, maxNum) {
      var productsNums = [];
      while (productsNums.length < cnt) {
        let randomInset = Math.random() * maxNum;
        let randomNum = Math.round(randomInset);
        if (!productsNums.includes(randomNum)) {
          productsNums.push(randomNum);
        }
      }
      return productsNums;
    }

